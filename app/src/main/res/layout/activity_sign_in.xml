<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="54dp"
        android:src="@drawable/video_calling_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"


        android:layout_marginEnd="59dp"
        android:layout_marginBottom="225dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="295dp"
            android:layout_height="18dp"

            android:text="Email"

            android:textColor="#1565C0" />

        <EditText
            android:id="@+id/editTextTextEmailAddress1"
            android:layout_width="270dp"
            android:layout_height="37dp"

            android:background="@drawable/email_pass_rectangle"
            android:ems="10"

            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="17dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="295dp"
            android:layout_height="18dp"

            android:text="Password"

            android:textColor="#1565C0" />

        <EditText
            android:id="@+id/editTextTextPassword1"
            android:layout_width="270dp"
            android:layout_height="37dp"

            android:background="@drawable/email_pass_rectangle"
            android:ems="10"

            android:inputType="textPassword" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="12dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:background="@android:color/transparent"

            android:src="@drawable/google__g__logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="23dp"


        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="126dp"
            android:layout_height="55dp"
            android:background="@drawable/sign_in_up"
            android:text="Sign In" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="126dp"
            android:layout_height="55dp"
            android:background="@drawable/sign_in_up"
            android:onClick="moveOn2"
            android:text="Sign Up" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>